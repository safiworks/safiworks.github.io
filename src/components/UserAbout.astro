---
import { ctx } from "../context.ts";
const bio =
    "I'm a self-taught hobbyist software developer and a high-schooler from Egypt, I'm interested in low-level programming and currently mainly doing osdev, my go-to programming language is Rust.";
const about = "Hello, I'm " + ctx.full_name + ", " + bio;
---

<div>
    <a href={ctx.profile_url}>
        <img
            src={ctx.avatar_url}
            alt={ctx.full_name}
            class="user-about-avatar"
        />
    </a>
    <p class="user-about-text">{about}</p>
</div>
<style>
    .user-about-avatar {
        padding-right: 30px;
        border-radius: 30%;
        max-width: 10rem;
    }
    .user-about-text {
        flex-basis: 55%;
        flex-grow: 3;
    }
    div {
        padding-top: 4rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        width: 50vw;
    }
</style>
