---
// field name, field value, field icon, field link
const { specs } = Astro.props as {
    specs: [string, string, string, string][];
};
---

<div>
    {
        specs.map(([name, value, icon, link]) => (
            <div class="spec-container">
                <i class={icon} />
                <p class="spec-name">{name}:</p>
                <a href={link}>
                    <p class="spec-value">{value}</p>
                </a>
            </div>
        ))
    }
</div>

<style>
    .spec-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    i {
        width: 1rem;
        height: 1rem;
        margin-right: 5px;
    }
    .spec-name {
        padding-left: 5px;
        padding-right: 5px;
        font-weight: bold;
    }
    a {
        color: inherit;
    }
</style>
